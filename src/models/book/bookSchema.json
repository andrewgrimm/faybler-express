{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The Root Schema",
  "required": [
    "title",
    "description",
    "tags",
    "authorUsername",
    "uploadDate",
    "language",
    "difficulty",
    "cover",
    "contents",
    "content"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The ID Schema",
      "default": "",
      "examples": [
        "MMaTmwFPljQ0bV3TrLZM"
      ],
      "pattern": "^(?!\\.\\.?$)(?!.*__.*__)([^/]{1,1500})$"
    },
    "title": {
      "$id": "#/properties/title",
      "type": "string",
      "title": "The Title Schema",
      "default": "",
      "examples": [
        "The Three Little Bears"
      ],
      "pattern": "^(.*)$"
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string",
      "title": "The Description Schema",
      "default": "",
      "examples": [
        "This is the description"
      ],
      "pattern": "^(.*)$"
    },
    "tags": {
      "$id": "#/properties/tags",
      "type": "array",
      "title": "The Tags Schema",
      "items": {
        "$id": "#/properties/tags/items",
        "type": "string",
        "title": "The Items Schema",
        "default": "",
        "examples": [
          "someHashTagWithoutHash"
        ],
        "pattern": "^(.*)$"
      }
    },
    "authorUsername": {
      "$id": "#/properties/authorUsername",
      "type": "string",
      "title": "The AuthorUsername Schema",
      "default": "",
      "examples": [
        "Andrew"
      ],
      "pattern": "^(.*)$"
    },
    "uploadDate": {
      "$id": "#/properties/uploadDate",
      "type": "integer",
      "title": "The Uploaddate Schema",
      "default": 0,
      "examples": [
        0
      ]
    },
    "language": {
      "$id": "#/properties/language",
      "type": "string",
      "title": "The Language Schema",
      "default": "",
      "examples": [
        "eng"
      ],
      "pattern": "^(.*)$"
    },
    "difficulty": {
      "$id": "#/properties/difficulty",
      "type": "number",
      "title": "The Difficulty Schema",
      "default": "",
      "examples": [
        1
      ],
      "pattern": "^(.*)$"
    },
    "cover": {
      "$id": "#/properties/cover",
      "type": "string",
      "title": "The Cover Schema",
      "default": "",
      "examples": [
        "someBase64String"
      ],
      "pattern": "^(.*)$"
    },
    "contents": {
      "$id": "#/properties/contents",
      "type": "array",
      "title": "The Contents Schema",
      "items": {
        "$id": "#/properties/contents/items",
        "type": "string",
        "title": "The Items Schema",
        "default": "",
        "examples": [
          "chapter 1 Title",
          "chapter 2 Title"
        ],
        "pattern": "^(.*)$"
      }
    },
    "content": {
      "$id": "#/properties/content",
      "type": "array",
      "title": "The Content Schema",
      "items": {
        "$id": "#/properties/content/items",
        "type": "string",
        "title": "The Items Schema",
        "default": "",
        "examples": [
          "string containing chaper 1",
          "string containing chaper 2"
        ],
        "pattern": "^(.*)$"
      }
    }
  }
}
